<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.SettingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="参数"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="下限"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="上限"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="温度警戒值"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_temperature_min"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/value_bg"
                        android:inputType="numberDecimal"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="18"/>

                    <EditText
                        android:id="@+id/et_temperature_max"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:inputType="numberDecimal"
                        android:background="@color/value_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="18"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="°C"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btn_set_temperature"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:text="设置"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="浊度警戒值"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_turbidity_min"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4dp"
                        android:inputType="numberDecimal"
                        android:layout_marginRight="4dp"
                        android:background="@color/value_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="18"/>

                    <EditText
                        android:id="@+id/et_turbidity_max"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:inputType="numberDecimal"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/value_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="18"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="%"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btn_set_turbidity"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:text="设置"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="含氧警戒值"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_oxygen_min"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4dp"
                        android:inputType="numberDecimal"
                        android:layout_marginRight="4dp"
                        android:background="@color/value_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="18"/>

                    <EditText
                        android:id="@+id/et_oxygen_max"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:inputType="numberDecimal"
                        android:background="@color/value_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="18"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="mg/L"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btn_set_oxygen"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:text="设置"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="PH警戒值"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_ph_min"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4dp"
                        android:inputType="numberDecimal"
                        android:layout_marginRight="4dp"
                        android:background="@color/value_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="18"/>

                    <EditText
                        android:id="@+id/et_ph_max"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:inputType="numberDecimal"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/value_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="18"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btn_set_ph"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:text="设置"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="水深警戒值"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_water_depth_min"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4dp"
                        android:inputType="numberDecimal"
                        android:layout_marginRight="4dp"
                        android:background="@color/value_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="18"/>

                    <EditText
                        android:id="@+id/et_water_depth_max"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/value_bg"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:inputType="numberDecimal"
                        android:text="18"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="cm"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btn_set_water_depth"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:text="设置"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="鱼塘开关"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/oxygen_pump"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btn_set_oxygen_pump"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimary"
                    android:text="已开启"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/lift_pump"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btn_set_lift_pump"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimary"
                    android:text="已开启"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/waterflood_pump"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btn_set_waterflood_pump"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimary"
                    android:text="已开启"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="投食"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/et_feed_weight"
                    android:inputType="numberDecimal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="2.5"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@color/value_bg" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:text="kg"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/et_feed_delay_time"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/value_bg"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="小时后"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"/>

                <Button
                    android:id="@+id/btn_set_feed"
                    android:focusableInTouchMode="true"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:layout_marginRight="10dp"
                    android:text="设置"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>